        if (!koi) koi = [];

        const pond = ponds[0];
        koi.push({
            x: pond.x + pond.width / 2,
            y: pond.y + pond.height / 2,
            pondIndex: 0,
            swimAngle: Math.random() * Math.PI * 2,
